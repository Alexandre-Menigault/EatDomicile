@model EatDomicile.Web.ViewModels.DrinkViewModel
@{
    ViewData["Title"] = "Créer une boisson";
}

<h4>Créer une boisson</h4>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="Fizzy" class="form-check-input" />
        <label asp-for="Fizzy" class="form-check-label"></label>
    </div>
    <div class="mb-3">
        <label asp-for="KCal" class="form-label"></label>
        <input asp-for="KCal" class="form-control" />
        <span asp-validation-for="KCal" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Créer</button>
    <a asp-action="Index" class="btn btn-secondary">Retour</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
