@model EatDomicile.Web.ViewModels.IngredientViewModel
@{
    ViewData["Title"] = "Supprimer un ingrédient";
}

<h4>Supprimer un ingrédient</h4>

<p class="alert alert-danger">
    Êtes-vous sûr de vouloir supprimer l’ingrédient
    <strong>@Model.Name</strong> ?
</p>

<dl class="row">
    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Kcal)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(m => m.Kcal)</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Allergene)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(m => m.Allergene)</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
