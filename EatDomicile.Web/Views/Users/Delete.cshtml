@model EatDomicile.Web.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Supprimer un utilisateur";
}

<h4>Supprimer utilisateur</h4>

<p class="alert alert-danger">
    Êtes-vous sûr de vouloir supprimer l’utilisateur
    <strong>@Model.FirstName @Model.LastName</strong> ?
</p>

<dl class="row">
    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Email)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(m => m.Email)</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Phone)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(m => m.Phone)</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
