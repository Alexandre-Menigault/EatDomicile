@model IEnumerable<EatDomicile.Web.ViewModels.IngredientViewModel>
@{
    ViewData["Title"] = "Ingrédients";
}

<h4>Ingrédients</h4>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Nouvel ingrédient</a>
</p>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Kcal)</th>
            <th>@Html.DisplayNameFor(model => model.Allergene)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Name)</td>
                <td>@Html.DisplayFor(m => item.Kcal)</td>
                <td>@Html.DisplayFor(m => item.Allergene)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
