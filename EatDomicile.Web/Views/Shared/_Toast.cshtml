@using System.Text.Json
@using EatDomicile.Web.ViewModels.Toast
@{
  ToastViewModel? toast = null;
  if (TempData["Toast"] is string toastJson)
  {
    toast = JsonSerializer.Deserialize<ToastViewModel>(toastJson);
  }
}

@if (toast != null)
{
  <div class="toast @toast.Classes" data-bs-delay="5000"  data-bs-autohide="true" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <strong class="me-auto">@toast.Name</strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
      @toast.Message
    </div>
  </div>
  

}


