@model IEnumerable<EatDomicile.Web.ViewModels.OrderViewModel>
@{
    ViewData["Title"] = "Commandes";
}

<h4>Commandes</h4>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Nouvelle commande</a>
</p>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
            <th>@Html.DisplayNameFor(model => model.DeliveryDate)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>@Html.DisplayNameFor(model => model.UserId)</th>
            <th>@Html.DisplayNameFor(model => model.DeliveryAddressId)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.OrderDate)</td>
                <td>@Html.DisplayFor(m => item.DeliveryDate)</td>
                <td>@Html.DisplayFor(m => item.Status)</td>
                <td>@Html.DisplayFor(m => item.UserId)</td>
                <td>@Html.DisplayFor(m => item.DeliveryAddressId)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
