@model EatDomicile.Web.ViewModels.OrderViewModel
@{
    ViewData["Title"] = "Détails commande";
}

<h4 class="mb-3">Détails de la commande</h4>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Date de commande</dt>
            <dd class="col-sm-9">@Model.OrderDate.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Date de livraison</dt>
            <dd class="col-sm-9">@Model.DeliveryDate?.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Statut</dt>
            <dd class="col-sm-9">
                @if (Model.Status == "Livrée")
                {
                    <span class="badge bg-success">@Model.Status</span>
                }
                else if (Model.Status == "En préparation")
                {
                    <span class="badge bg-warning text-dark">@Model.Status</span>
                }
                else
                {
                    <span class="badge bg-secondary">@Model.Status</span>
                }
            </dd>

            <dt class="col-sm-3">Utilisateur</dt>
            <dd class="col-sm-9">@Model.UserName</dd>

            <dt class="col-sm-3">Adresse de livraison</dt>
            <dd class="col-sm-9">@Model.DeliveryAddress</dd>
        </dl>
    </div>
</div>

@if (Model.Products != null && Model.Products.Any())
{
    <div class="card mt-4 shadow-sm">
        <div class="card-body">
            <h5 class="mb-3">Produits associés</h5>
            <div class="row">
                <div class="col-md-6">
                    <ul class="list-group">
                        @foreach (var p in Model.Products)
                        {
                            <li class="list-group-item"><strong>@p</strong></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
}

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning disabled" disabled="true">Modifier</a>
    <a asp-action="Index" class="btn btn-secondary">Retour</a>
</div>
