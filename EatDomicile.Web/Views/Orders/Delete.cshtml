@model EatDomicile.Web.ViewModels.OrderViewModel
@{
    ViewData["Title"] = "Supprimer une commande";
}

<h4>Supprimer une commande</h4>

<p class="alert alert-danger">
    Êtes-vous sûr de vouloir supprimer la commande
    <strong>@Model.Id</strong> ?
</p>

<dl class="row">
    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.OrderDate)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(m => m.OrderDate)</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Status)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(m => m.Status)</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
